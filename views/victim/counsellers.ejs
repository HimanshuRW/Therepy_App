<%- include('../partials/head.ejs') %>
<%- include('../partials/victimNav.ejs') %>
  
    <header>
      <h1>Talk To Expert</h1>
        <div class="d-flex flex-wrap justify-content-evenly">
          <% if (counsellerArr.length>0) { %>
            <% for(therepist of counsellerArr) { %>
              <div class="card m-4" style="width: 18rem;">
                <div class="card-body">
                  <h5 class="card-title"><%= therepist.name %></h5>
                  <p class="card-text">From : <%= therepist.city %></p>
                  <a href="/talk/<%= therepist._id %>" class="btn btn-primary">Have a talk</a>
                </div>
              </div>
            <% } %> 
          <% } else { %>
            <h2>No Expterts Registered yet</h2>
          <% } %>
            
        </div>
    </header>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>